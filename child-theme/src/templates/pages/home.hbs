<section class="section-banner">
	<img src="/images/banner-home.png" alt="" class="object-fit object-fit-cover">
	<img src="/images/banner-home-mobile.png" alt="" class="object-fit object-fit-cover banner-mobile">
	<div class="inner">
		<h1 class="title">Discover how to win scholarships</h1>
		<p>Search our database of 1.9+ million scholarships, and get tips and strategies to win them.</p>
		<form class="form-search">
			<label for="search">Start your search now</label>
			<div class="search">
				<input type="search" id="search" placeholder="College, major, location, or keyword...">
			</div>
			<button type="submit">Search</button>
		</form>
	</div>
</section>

<section class="section-search-home">
	<div class="inner">
		<h2 class="title">SIGN UP for a weekly newsletter on all thing scholarships.</h2>
		<h3>Get scholarship tips and news.</h3>
		<div class="form-subscribe">
			{{#>gravityFormForm customClass="horizontal"}}
				{{#>gravityFormBody}}
					{{>gravityFormEmail labelText="Your email address"}}
				{{/gravityFormBody}}
				{{>gravityFormFooter buttonText="Subscribe"}}
			{{/gravityFormForm}}
		</div>
	</div>
</section>

